# ===========================================
# ENVIRONMENT VARIABLES EXAMPLE
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real secrets!
# ===========================================

# ----- Server-side variables (no VITE_ prefix) -----
# These are only accessible in server functions and API routes

# Database connection URL
DATABASE_URL=postgresql://user:password@localhost:5432/mydb

# Clerk authentication secret key
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxx

# Node environment
NODE_ENV=development

# ----- Client-side variables (VITE_ prefix required) -----
# These are accessible in browser code - DO NOT put secrets here!

# Backend URLs
VITE_BACKEND_URL=http://localhost:3000
VITE_BACKEND_API_URL=http://localhost:3000/api

# Clerk publishable key (safe to expose)
VITE_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxx
